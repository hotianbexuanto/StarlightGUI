<Page
    x:Class="StarlightGUI.KernelModulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 固定标题栏区域 -->
            <Grid Grid.Row="0" Padding="0,0,0,5" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                       Text="内核模块 (驱动)" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                       x:Name="KernelModuleCountText" 
                       Text="正在加载..." 
                       Margin="20,0,0,0" 
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                <CommandBar Grid.Column="3" 
                       DefaultLabelPosition="Right"
                       HorizontalAlignment="Right">
                    <AppBarButton Label="刷新" 
                                  x:Name="RefreshKernelModuleListButton" 
                                  Click="RefreshKernelModuleListButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xe72c;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Label="加载驱动" 
                                  x:Name="LoadDriverButton" 
                                  Click="LoadDriverButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xeda2;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Label="卸载模块" 
                                  x:Name="UnloadModuleButton" 
                                  Click="UnloadModuleButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xec91;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <RichEditBox Grid.Column="4"
                         x:Name="KernelModuleSearchBox" 
                         HorizontalAlignment="Right" 
                         Width="300" 
                         Height="32"
                         PlaceholderText="搜索模块..."
                         TextChanged="KernelModuleSearchBox_TextChanged"/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="5,5,0,0" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="160"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="NameHeaderButton" Grid.Column="0" Height="32" CornerRadius="0" Content="模块" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Name"/>
                    <Button x:Name="ImageBaseHeaderButton" Grid.Column="1" Height="32" CornerRadius="0" Content="基址" HorizontalAlignment="Stretch"/>
                    <Button x:Name="DriverObjectHeaderButton" Grid.Column="2" Height="32" CornerRadius="0" Content="驱动对象" HorizontalAlignment="Stretch"/>
                    <Button x:Name="SizeHeaderButton" Grid.Column="3" Height="32" CornerRadius="0" Content="大小" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Size"/>
                    <Button x:Name="LoadOrderHeaderButton" Grid.Column="4" Height="32" CornerRadius="0" Content="加载顺序" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="LoadOrder"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="2"
                          CornerRadius="0,0,5,5"
                          BorderThickness="1,0,1,1"
                          Background="{ThemeResource ControlFillColorDefaultBrush}" 
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <ProgressRing x:Name="LoadingRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <ListView x:Name="KernelModuleListView"
                          Background="Transparent"
                          RightTapped="KernelModuleListView_RightTapped">

                        <!-- 进程数据 -->
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="160"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 模块 -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                               FontSize="14" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                        <TextBlock Text="{Binding Path}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 基址 -->
                                    <TextBlock Grid.Column="1" 
                                           Text="{Binding ImageBase}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 驱动对象 -->
                                    <TextBlock Grid.Column="2" 
                                           Text="{Binding DriverObject}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 大小 -->
                                    <TextBlock Grid.Column="3" 
                                           Text="{Binding Size}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="4"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 加载顺序 -->
                                    <TextBlock Grid.Column="4" 
                                           Text="{Binding LoadOrder}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollViewer>
        </Grid>
        <StackPanel HorizontalAlignment="Right"
                    x:Name="InfoBarPanel" 
                    Margin="0,10,10,0"/>
    </Grid>
</Page>