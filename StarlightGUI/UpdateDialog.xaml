<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="StarlightGUI.UpdateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:StarlightGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    RequestedTheme="Dark"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.TitleTemplate>
        <DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    Margin="0,5,0,0"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="30"
                    Glyph="&#xecc5;" />
                <TextBlock VerticalAlignment="Center" Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <Grid>
        <StackPanel
            x:Name="UpdateStackPanel"
            Margin="0,0,0,10"
            Visibility="Collapsed">
            <TextBlock Text="检测到新版本的 Starlight GUI 可用！" />
            <TextBlock>
                <Run Text="当前版本:" />
                <Run Text="{StaticResource Version}" />
            </TextBlock>
            <TextBlock Margin="0,0,0,10">
                <Run Text="最新版本:" />
                <Run x:Name="LatestVersionText" />
            </TextBlock>
            <TextBlock Text="您可以通过这个对话框直接打开下载网页，或选择不进行更新。" />
            <TextBlock
                Margin="0,0,0,10"
                FontSize="12"
                Foreground="LightGray"
                Text="Tips: 可以在设置里修改是否检测更新" />
            <Border
                Height="1"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                Background="LightGray" />
            <TextBlock Text="夸克网盘提取码: vVmj " />
            <TextBlock Text="本软件依靠网盘转存拉新来获取一些收益，所以不提供直链下载，敬请理解！" />
        </StackPanel>
        <StackPanel
            x:Name="AnnouncementStackPanel"
            Margin="0,0,0,10"
            Visibility="Collapsed">
            <TextBlock x:Name="AnnouncementLine1" />
            <TextBlock x:Name="AnnouncementLine2" />
            <TextBlock x:Name="AnnouncementLine3" Margin="0,0,0,10" />
            <TextBlock
                Margin="0,0,0,10"
                FontSize="12"
                Foreground="LightGray">
                <Run Text="更新日期:" />
                <Run x:Name="UpdateTimeText" />
            </TextBlock>
            <CheckBox
                x:Name="DontShowAgainCheckBox"
                Content="今日不再显示"
                IsChecked="False" />
        </StackPanel>
    </Grid>
</ContentDialog>