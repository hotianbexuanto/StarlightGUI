<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="StarlightGUI.LineGraphControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl"
    SizeChanged="OnSizeChanged"
    PointerMoved="OnPointerMoved"
    PointerExited="OnPointerExited"
    PointerWheelChanged="OnPointerWheelChanged">

    <UserControl.Resources>
        <!-- 网格线 -->
        <Style x:Key="GridLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="#20000000"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeDashArray" Value="2,2"/>
        </Style>

        <!-- 坐标轴标签 -->
        <Style x:Key="AxisLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 图例 -->
        <Style x:Key="LegendItemStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="8,2,0,2"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock 
            Grid.Row="0" Grid.ColumnSpan="2"
            x:Name="TitleText"
            HorizontalAlignment="Center"
            Margin="0,0,0,8"
            FontSize="14"
            FontWeight="SemiBold"
            Visibility="Collapsed"/>

        <!-- Y 轴 -->
        <Canvas 
            Grid.Row="1" Grid.Column="0"
            x:Name="YAxisCanvas"
            Width="60"
            Margin="0,0,8,0"/>

        <!-- 主图表 -->
        <Grid 
            Grid.Row="1" Grid.Column="1"
            x:Name="ChartArea"
            Background="Transparent"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <!-- 网格线 -->
            <Canvas x:Name="GridCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- 数据线 -->
            <Canvas x:Name="DataCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- 十字准星 -->
            <Line x:Name="CrosshairX" 
                  Stroke="#40000000"
                  StrokeThickness="1"
                  StrokeDashArray="5,5"
                  Visibility="Collapsed"/>
            <Line x:Name="CrosshairY" 
                  Stroke="#40000000"
                  StrokeThickness="1"
                  StrokeDashArray="5,5"
                  Visibility="Collapsed"/>

            <!-- 提示 -->
            <Border x:Name="Tooltip"
                    Background="#F0FFFFFF"
                    BorderBrush="#80000000"
                    BorderThickness="1"
                    Padding="8,4"
                    CornerRadius="4"
                    Visibility="Collapsed"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock x:Name="TooltipXText" 
                               Foreground="Black"
                               FontSize="10"/>
                    <StackPanel x:Name="TooltipYPanel" 
                                Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- X 轴 -->
        <Canvas 
            Grid.Row="2" Grid.Column="1"
            x:Name="XAxisCanvas"
            Height="30"
            Margin="0,8,0,0"/>

        <!-- 图例 -->
        <StackPanel 
            Grid.Row="3" Grid.ColumnSpan="2"
            x:Name="LegendPanel"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,8,0,0"
            Visibility="Collapsed"/>
    </Grid>
</UserControl>