<Page
    x:Class="StarlightGUI.Process_ModulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <ScrollViewer>
            <Grid x:Name="RootGrid" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="模块" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Name="ModuleCountText" 
                                   Text="正在加载..." 
                                   Margin="20,0,0,0" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </Grid>

                    <!-- ListView，包含列标题和数据 -->
                    <ListView x:Name="ModuleListView"
                              Grid.Row="1"
                              Background="Transparent"
                              CornerRadius="5"
                              BorderThickness="1"
                              BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                              RightTapped="ModuleListView_RightTapped">

                        <!-- 列标题 -->
                        <ListView.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Height="30" Content="名称" HorizontalAlignment="Stretch"/>
                                <Button Grid.Column="1" Height="30" Content="地址" HorizontalAlignment="Stretch"/>
                                <Button Grid.Column="2" Height="30" Content="大小" HorizontalAlignment="Stretch"/>
                                <Button Grid.Column="3" Height="30" Content="路径" HorizontalAlignment="Stretch"/>
                                <Border Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" />
                                <Border Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" />
                                <Border Grid.Column="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" />
                            </Grid>
                        </ListView.Header>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 名称 -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Name}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>


                                    <Border Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="-16,0,0,0"/>

                                    <!-- 地址 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Address}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0" 
                                            Margin="-16,0,0,0"/>

                                    <!-- 大小 -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Size}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0" 
                                            Margin="-16,0,0,0"/>

                                    <!-- 路径 -->
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Path}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-4,0,0,0"/>

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </ScrollViewer>
        <StackPanel Width="1100" x:Name="InfoBarPanel" Margin="0,10,0,0"/>
    </Grid>
</Page>
