<Page
    x:Class="StarlightGUI.Process_ModulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="0,10,0,10" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="模块" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           x:Name="ModuleCountText" 
                           Text="正在加载..." 
                           Margin="10,0,0,0" 
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="5,5,0,0" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Height="32" CornerRadius="0" Content="模块" HorizontalAlignment="Stretch"/>
                    <Button Grid.Column="1" Height="32" CornerRadius="0" Content="地址" HorizontalAlignment="Stretch" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button Grid.Column="2" Height="32" CornerRadius="0" Content="大小" HorizontalAlignment="Stretch" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                          CornerRadius="0,0,5,5"
                          BorderThickness="1,0,1,1"
                          Background="{ThemeResource ControlFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <ProgressRing x:Name="LoadingRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <ListView x:Name="ModuleListView"
                              Background="Transparent"
                              RightTapped="ModuleListView_RightTapped">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 模块 -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                               FontSize="14" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                        <TextBlock Text="{Binding Path}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="12,0,0,0"/>

                                    <!-- 地址 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Address}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="24,0,0,0"/>

                                    <Border Grid.Column="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0" 
                                            Margin="12,0,0,0"/>

                                    <!-- 大小 -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Size}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="24,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
        <StackPanel HorizontalAlignment="Right"
                    x:Name="InfoBarPanel" 
                    Margin="0,10,10,0"/>
    </Grid>
</Page>