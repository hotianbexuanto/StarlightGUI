<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="StarlightGUI.LoadDriverDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:StarlightGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="加载驱动"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    PrimaryButtonText="加载"
    RequestedTheme="Dark"
    SecondaryButtonText="取消"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.TitleTemplate>
        <DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    Margin="0,5,0,0"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="30"
                    Glyph="&#xeda2;" />
                <TextBlock VerticalAlignment="Center" Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <Grid>
        <!--  输入框  -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Margin="0,0,0,20" Text="Starlight GUI 将根据选定驱动文件路径，加载目标驱动文件至系统内核。" />
            <TextBox
                x:Name="DriverPathTextBox"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                PlaceholderText="文件路径..." />
            <Button Click="ExploreButton_Click" Content="浏览..." />
            <CheckBox
                x:Name="BypassCheckBox"
                Content="绕过驱动签名检测"
                IsChecked="False" />
            <TextBlock
                x:Name="ErrorText"
                Foreground="Red"
                Text="" />
        </StackPanel>
    </Grid>
</ContentDialog>