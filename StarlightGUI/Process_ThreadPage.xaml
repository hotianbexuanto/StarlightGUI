<Page
    x:Class="StarlightGUI.Process_ThreadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="0,10,0,10" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                       Text="线程" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                       x:Name="ThreadCountText" 
                       Text="正在加载..." 
                       Margin="10,0,0,0" 
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="5,5,0,0" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="IdHeaderButton" Grid.Column="0" Height="32" CornerRadius="0" Content="TID" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Id"/>
                    <Button Grid.Column="1" Height="32" CornerRadius="0" Content="ETHREAD" HorizontalAlignment="Stretch" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button Grid.Column="2" Height="32" CornerRadius="0" Content="地址" HorizontalAlignment="Stretch" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button Grid.Column="3" Height="32" CornerRadius="0" Content="状态" HorizontalAlignment="Stretch" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button x:Name="PriorityHeaderButton" Grid.Column="4" Height="32" CornerRadius="0" Content="优先级" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Priority" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button Grid.Column="5" Height="32" CornerRadius="0" Content="模块" HorizontalAlignment="Stretch" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                          CornerRadius="0,0,5,5"
                          BorderThickness="1,0,1,1"
                          Background="{ThemeResource ControlFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <ProgressRing x:Name="LoadingRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <ListView x:Name="ThreadListView"
                          Background="Transparent"
                          RightTapped="ThreadListView_RightTapped">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TID -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Id}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="-16,0,0,0"/>

                                    <!-- ETHREAD -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding EThread}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="-16,0,0,0"/>

                                    <!-- 地址 -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Address}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="-16,0,0,0"/>

                                    <!-- 状态 -->
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Status}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="4"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="-16,0,0,0"/>

                                    <!-- 优先级 -->
                                    <TextBlock Grid.Column="4"
                                               Text="{Binding Priority}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="-32,0,0,0"/>

                                    <Border Grid.Column="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0"
                                            Margin="-16,0,0,0"/>

                                    <!-- 模块 -->
                                    <TextBlock Grid.Column="5"
                                               Text="{Binding Module}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
        <StackPanel HorizontalAlignment="Right"
                    x:Name="InfoBarPanel" 
                    Margin="0,10,10,0"/>
    </Grid>
</Page>