<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StarlightGUI.MonitorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:essential="using:WinUI3Package" 
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 固定标题栏区域 -->
            <Grid Grid.Row="0" Padding="0,0,0,5" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <essential:Segmented Grid.Column="0" HorizontalAlignment="Left" SelectedIndex="0">
                    <essential:SegmentedItem>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xf0b2;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                            <TextBlock Text="对象" />
                        </StackPanel>
                    </essential:SegmentedItem>
                </essential:Segmented>
                <CommandBar Grid.Column="2" 
                            DefaultLabelPosition="Right"
                            HorizontalAlignment="Right">
                    <AppBarButton Label="刷新" 
                                  x:Name="RefreshButton" 
                                  Click="RefreshButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xe72c;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <TextBox Grid.Column="3"
                         x:Name="SearchBox" 
                         HorizontalAlignment="Right" 
                         Width="300" 
                         Height="32"
                         PlaceholderText="搜索..."
                         TextChanged="SearchBox_TextChanged"/>
            </Grid>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" CornerRadius="5,0,0,5" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}" Background="{ThemeResource ControlFillColorDefaultBrush}" >
                    <ScrollView ContentOrientation="Both" MaxWidth="150">
                        <essential:Segmented x:Name="ObjectTreeView" SelectedIndex="0" SelectionChanged="ObjectTreeView_SelectionChanged" VerticalAlignment="Top" Style="{StaticResource ButtonSegmentedStyle}" BorderThickness="0" CornerRadius="0">
                            <essential:Segmented.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </essential:Segmented.ItemsPanel>
                        </essential:Segmented>
                    </ScrollView>
                </Border>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="0,5,0,0" BorderThickness="0,1,1,1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="NameHeaderButton" Grid.Column="0" Height="32" CornerRadius="0" Content="名称" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Object_Name"/>
                            <Button x:Name="TypeHeaderButton" Grid.Column="1" Height="32" CornerRadius="0" Content="类型" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Object_Type" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" CornerRadius="0,0,5,0" BorderThickness="0,0,1,1" Background="{ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <Grid>
                            <ListView x:Name="ObjectListView"
                                      Background="Transparent"
                                      Tapped="ObjectListView_Tapped">
                                <!-- 进程数据 -->
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="50">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="160"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 名称 -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14" 
                                                           Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                                <TextBlock Text="{Binding Path}" 
                                                           FontSize="12" 
                                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                            </StackPanel>

                                            <Border Grid.Column="1"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Stretch"
                                                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                                    BorderThickness="0,0,1,0" 
                                                    Margin="12,0,0,0"/>

                                            <!-- 类型 -->
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Type}" 
                                                       FontSize="12" 
                                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="24,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
