<Page
    x:Class="StarlightGUI.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 固定标题栏区域 -->
            <Grid Grid.Row="0" Padding="0,0,0,5" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                       Text="任务管理器" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                       x:Name="ProcessCountText" 
                       Text="正在加载..." 
                       Margin="20,0,0,0" 
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                <CommandBar Grid.Column="3" 
                       DefaultLabelPosition="Right"
                       HorizontalAlignment="Right">
                    <AppBarButton Label="刷新" 
                             x:Name="RefreshProcessListButton" 
                             Click="RefreshProcessListButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xe72c;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Label="运行进程" 
                             Click="CreateProcessButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xefda;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Label="结束进程" 
                             x:Name="TerminateProcessButton" 
                             Click="TerminateProcessButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xe733;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <RichEditBox Grid.Column="4"
                         x:Name="ProcessSearchBox" 
                         HorizontalAlignment="Right" 
                         Width="300" 
                         Height="32"
                         PlaceholderText="搜索进程..."
                         TextChanged="ProcessSearchBox_TextChanged"/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="5" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="NameHeaderButton" Grid.Column="0" Height="30" CornerRadius="0" Content="进程" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Name"/>
                    <Button x:Name="EProcessHeaderButton" Grid.Column="1" Height="30" CornerRadius="0" Content="EPROCESS" HorizontalAlignment="Stretch"/>
                    <Button x:Name="CpuHeaderButton" Grid.Column="2" Height="30" CornerRadius="0" Content="CPU" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="CpuUsage"/>
                    <Button x:Name="MemoryHeaderButton" Grid.Column="3" Height="30" CornerRadius="0" Content="内存" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="MemoryUsage"/>
                    <Button x:Name="StatusHeaderButton" Grid.Column="4" Height="30" CornerRadius="0" Content="状态" HorizontalAlignment="Stretch"/>
                    <Button x:Name="IdHeaderButton" Grid.Column="5" Height="30" CornerRadius="0" Content="PID" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Id"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="2"
                          CornerRadius="5"
                          BorderThickness="1"
                          Background="{ThemeResource ControlFillColorDefaultBrush}" 
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <ListView x:Name="ProcessListView"
                          Background="Transparent"
                          RightTapped="ProcessListView_RightTapped">

                        <!-- 进程数据 -->
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 进程图标 -->
                                    <Image Grid.Column="0" 
                                       Source="{Binding Icon}" 
                                       Width="16" 
                                       Height="16" 
                                       Margin="0,0,16,0"
                                       VerticalAlignment="Center"/>

                                    <!-- 进程名 -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                               FontSize="14" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                        <TextBlock Text="{Binding Description}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- EPROCESS -->
                                    <TextBlock Grid.Column="2" 
                                           Text="{Binding EProcess}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- CPU -->
                                    <TextBlock Grid.Column="3" 
                                           Text="{Binding CpuUsage}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="4"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 内存使用 -->
                                    <TextBlock Grid.Column="4" 
                                           Text="{Binding MemoryUsage}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 状态 -->
                                    <TextBlock Grid.Column="5"
                                           Text="{Binding Status}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="6"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 进程ID -->
                                    <TextBlock Grid.Column="6"
                                           Text="{Binding Id}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollViewer>
        </Grid>
        <StackPanel Width="1100" 
                    x:Name="InfoBarPanel" 
                    Margin="0,10,0,0"/>
    </Grid>
</Page>