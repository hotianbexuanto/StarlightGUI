<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StarlightGUI.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ct="using:XamlToolkit.WinUI.Controls" 
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <ScrollViewer Padding="20">
            <StackPanel>
                <Button x:Name="MainButton"
                    Padding="16" 
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Margin="0,0,0,10">

                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Grid Width="80" Height="80" Margin="0,0,16,0" HorizontalAlignment="Left">
                                <Ellipse Width="80" Height="80">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="UserAvatar" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Ellipse 
                        Width="80" 
                        Height="80" 
                        Stroke="{StaticResource WindowBackgroundBrush}" 
                        StrokeThickness="1.5"/>
                            </Grid>
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock x:Name="WelcomeText" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="AppIntroduction" FontSize="14" Margin="0,5,0,0"/>
                                <TextBlock x:Name="HitokotoText" FontSize="14" Margin="0,15,0,0" Foreground="LightGray"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 钟 -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0,0,0">
                            <TextBlock Text="当前时间" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- 小时 -->
                                <Button CornerRadius="4" 
                                Margin="2" 
                                Padding="8,4" >
                                    <TextBlock x:Name="Hour1" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="20"/>
                                </Button>
                                <Button CornerRadius="4" 
                                Margin="2" 
                                Padding="8,4">
                                    <TextBlock x:Name="Hour2" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="20"/>
                                </Button>

                                <TextBlock Text=":" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Margin="4,0"/>

                                <!-- 分钟 -->
                                <Button CornerRadius="4"  
                                Margin="2" 
                                Padding="8,4">
                                    <TextBlock x:Name="Minute1" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="20"/>
                                </Button>
                                <Button CornerRadius="4" 
                                Margin="2" 
                                Padding="8,4">
                                    <TextBlock x:Name="Minute2" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="20"/>
                                </Button>

                                <TextBlock Text=":" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Margin="4,0"/>

                                <!-- 秒钟 -->
                                <Button CornerRadius="4" 
                                Margin="2" 
                                Padding="8,4">
                                    <TextBlock x:Name="Second1" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="20"/>
                                </Button>
                                <Button CornerRadius="4" 
                                Margin="2" 
                                Padding="8,4">
                                    <TextBlock x:Name="Second2" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="20"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Button>
                <Button Padding="16" 
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Margin="0,0,0,10">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" 
                           Source="/Assets/StarlightGUI.png" 
                           Width="225" Height="150"
                           HorizontalAlignment="Left"
                           Margin="-8,0,20,0">
                        </Image>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="0,-10,0,0">
                            <TextBlock Text="Starlight GUI" FontSize="32" FontWeight="Bold"/>
                            <TextBlock Text="一个拥有现代化UI界面的全能系统工具" FontSize="16" Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <FontIcon Glyph="&#xecc5;" FontSize="14" Foreground="Gray"/>
                                <TextBlock Text="  版本：" FontSize="14" Foreground="LightGray"/>
                                <TextBlock Text="{StaticResource Version}" FontSize="14" Foreground="LightGray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xec92;" FontSize="14" Foreground="Gray"/>
                                <TextBlock Text="  更新日期：" FontSize="14" Foreground="LightGray"/>
                                <TextBlock Text="{StaticResource ReleaseDate}" FontSize="14" Foreground="LightGray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xe943;" FontSize="14" Foreground="Gray"/>
                                <TextBlock Text="  开发者：" FontSize="14" Foreground="LightGray"/>
                                <TextBlock Text="{StaticResource Author}" FontSize="14" Foreground="LightGray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xe71b;" FontSize="14" Foreground="Gray"/>
                                <TextBlock Text="  开源仓库：https://github.com/RinoRika/StarlightGUI" FontSize="14" Foreground="LightGray"/>
                            </StackPanel>
                            <TextBlock Text="Apache 2.0 License | OSI Certified | Copyright © 2025 Starlight. Some Rights Reserved."
                               FontSize="14" Foreground="LightGray" VerticalAlignment="Bottom" HorizontalAlignment="Center" Padding="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>
                <TextBlock Text="系统概览" FontWeight="Bold" FontSize="14" Padding="10" HorizontalAlignment="Left"/>
                <Expander HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch" 
                          Margin="0,0,0,10"
                          BorderBrush="Transparent"
                          Header="统计图">
                    <local:LineGraphControl HorizontalAlignment="Stretch" Height="300" Margin="-20,0,0,0" EnableZoom="False" Title="占用率统计" x:Name="TotalLineGraph"/>
                </Expander>
                <!-- CPU -->
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Margin="0,0,0,10">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ct:RadialGauge Grid.Column="0" x:Name="CpuGauge" 
                                        Minimum="0" Maximum="100" TickSpacing="10" StepSize="1" 
                                        IsInteractive="False" ValueStringFormat=" {0}% " 
                                        Width="150"
                                        TrailBrush="LightSkyBlue"
                                        NeedleBrush="LightSkyBlue"/>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="CPU" FontWeight="Bold" FontSize="20"/>
                            <TextBlock x:Name="CpuManufacture" FontWeight="SemiBold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="速度: "/>
                                        <Run x:Name="CpuFrequency" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="进程: "/>
                                        <Run x:Name="CpuProcess" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="线程: "/>
                                        <Run x:Name="CpuThread" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="系统调用: "/>
                                        <Run x:Name="CpuSyscall" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="正常运行时间: "/>
                                        <Run x:Name="CpuRunTime" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="核心: "/>
                                        <Run x:Name="CpuCore" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="虚拟化: "/>
                                        <Run x:Name="CpuVirtualization" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="L1 缓存: "/>
                                        <Run x:Name="CpuCacheL1" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="L2 缓存: "/>
                                        <Run x:Name="CpuCacheL2" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="L3 缓存: "/>
                                        <Run x:Name="CpuCacheL3" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Column="3" x:Name="CpuPercent" FontWeight="Bold" FontSize="24"/>
                    </Grid>
                </Button>
                <!-- 内存 -->
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Margin="0,0,0,10">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ct:RadialGauge Grid.Column="0" x:Name="MemGauge" 
                                        Minimum="0" Maximum="100" TickSpacing="10" StepSize="1" 
                                        IsInteractive="False" ValueStringFormat=" {0}% " 
                                        Width="150"
                                        TrailBrush="DodgerBlue"
                                        NeedleBrush="DodgerBlue"/>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="内存" FontWeight="Bold" FontSize="20"/>
                            <TextBlock x:Name="MemSize" FontWeight="SemiBold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="使用中: "/>
                                        <Run x:Name="MemUsing" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="可用: "/>
                                        <Run x:Name="MemUsable" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="已提交: "/>
                                        <Run x:Name="MemCommitted" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="已缓存: "/>
                                        <Run x:Name="MemCached" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="页读取: "/>
                                        <Run x:Name="MemPageRead" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="页写入: "/>
                                        <Run x:Name="MemPageWrite" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="页传出: "/>
                                        <Run x:Name="MemPageInput" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="页传入: "/>
                                        <Run x:Name="MemPageOutput" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Column="3" x:Name="MemPercent" FontWeight="Bold" FontSize="24"/>
                    </Grid>
                </Button>
                <!-- 磁盘 -->
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Margin="0,0,0,10">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ct:RadialGauge Grid.Column="0" x:Name="DiskGauge" 
                                        Minimum="0" Maximum="100" TickSpacing="10" StepSize="1" 
                                        IsInteractive="False" ValueStringFormat=" {0}% " 
                                        Width="150"
                                        TrailBrush="LimeGreen"
                                        NeedleBrush="LimeGreen"/>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="磁盘" FontWeight="Bold" FontSize="20"/>
                            <TextBlock x:Name="DiskManufacture" FontWeight="SemiBold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="读取速度: "/>
                                        <Run x:Name="DiskRead" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="写入速度: "/>
                                        <Run x:Name="DiskWrite" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="传输量: "/>
                                        <Run x:Name="DiskTrans" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="I/O 量: "/>
                                        <Run x:Name="DiskIO" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Column="3" x:Name="DiskPercent" FontWeight="Bold" FontSize="24"/>
                    </Grid>
                </Button>
                <!-- GPU -->
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Margin="0,0,0,10">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ct:RadialGauge Grid.Column="0" x:Name="GpuGauge" 
                                        Minimum="0" Maximum="100" TickSpacing="10" StepSize="1" 
                                        IsInteractive="False" ValueStringFormat=" {0}% " 
                                        Width="150"
                                        TrailBrush="MediumPurple"
                                        NeedleBrush="MediumPurple"/>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="GPU" FontWeight="Bold" FontSize="20"/>
                            <TextBlock x:Name="GpuManufacture" FontWeight="SemiBold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="内存: "/>
                                        <Run x:Name="GpuMem" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="温度: "/>
                                        <Run x:Name="GpuTemp" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="图形速度: "/>
                                        <Run x:Name="GpuClockGraphics" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="内存速度: "/>
                                        <Run x:Name="GpuClockMem" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Column="3" x:Name="GpuPercent" FontWeight="Bold" FontSize="24"/>
                    </Grid>
                </Button>
                <!-- 网络 -->
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Margin="0,0,0,10">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ct:RadialGauge Grid.Column="0" x:Name="NetGauge" 
                                        Minimum="0" Maximum="10240" TickSpacing="1024" StepSize="1" 
                                        IsInteractive="False" ValueStringFormat="" 
                                        Width="150"
                                        TrailBrush="DeepPink"
                                        NeedleBrush="DeepPink"/>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="网络" FontWeight="Bold" FontSize="20"/>
                            <TextBlock x:Name="NetManufacture" FontWeight="SemiBold" FontSize="16" MaxWidth="500"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel Width="200">
                                    <TextBlock>
                                        <Run Text="下载: "/>
                                        <Run x:Name="NetReceive" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="上传: "/>
                                        <Run x:Name="NetSend" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="数据包发送: "/>
                                        <Run x:Name="NetPacketSend" Foreground="LightGray"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="数据包接收: "/>
                                        <Run x:Name="NetPacketReceive" Foreground="LightGray"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                            <Button Content="下一个适配器名称" Click="NextAdapterName_Click" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                            <Button Content="图表切换发送/接收" Click="ChangeMode_Click"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </StackPanel>
        </ScrollViewer>
        <StackPanel HorizontalAlignment="Right"
                    x:Name="InfoBarPanel" 
                    Margin="0,10,10,0"/>
    </Grid>
</Page>