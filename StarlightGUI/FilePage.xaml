<Page
    x:Class="StarlightGUI.FilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="0,0,0,5" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="文件管理器" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           x:Name="FileCountText" 
                           Text="正在加载..."
                           Margin="10,0,0,0" 
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                <TextBox Grid.Column="2"
                             x:Name="PathBox" 
                             Height="32"
                             Margin="5,0,0,0" 
                             HorizontalAlignment="Stretch"
                             KeyDown="PathBox_KeyDown"/>

                <CommandBar Grid.Column="3" 
                       DefaultLabelPosition="Right"
                       HorizontalAlignment="Right">
                    <AppBarButton Label="刷新" 
                             x:Name="RefreshButton" 
                             Click="RefreshButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xe72c;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Label="下个盘符" 
                             x:Name="NextDriveButton" 
                             Click="NextDriveButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xebe7;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <TextBox Grid.Column="4"
                         x:Name="SearchBox" 
                         HorizontalAlignment="Right" 
                         Width="300" 
                         Height="32"
                         PlaceholderText="搜索..."
                         TextChanged="SearchBox_TextChanged"/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="5,5,0,0" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="PreviousButton" Grid.Column="0" Height="32" CornerRadius="0" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Previous">
                        <AnimatedIcon>
                            <AnimatedIcon.Source>
                                <animatedvisuals:AnimatedBackVisualSource/>
                            </AnimatedIcon.Source>
                        </AnimatedIcon>
                    </Button>
                    <Button x:Name="NameHeaderButton" Grid.Column="1" Height="32" CornerRadius="0" Content="文件" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Name" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button x:Name="ModifyTimeHeaderButton" Grid.Column="2" Height="32" CornerRadius="0" Content="修改日期" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="ModifyTime" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    <Button x:Name="SizeHeaderButton" Grid.Column="3" Height="32" CornerRadius="0" Content="大小" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Size" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                          CornerRadius="0,0,5,5"
                          BorderThickness="1,0,1,1"
                          Background="{ThemeResource ControlFillColorDefaultBrush}" 
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <ProgressRing x:Name="LoadingRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <ListView x:Name="FileListView"
                              Background="Transparent"
                              RightTapped="FileListView_RightTapped"
                              IsDoubleTapEnabled="True"
                              DoubleTapped="FileListView_DoubleTapped"
                              IsMultiSelectCheckBoxEnabled="True"
                              SelectionMode="Extended">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="40">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 进程图标 -->
                                    <Image Grid.Column="0" 
                                       Source="{Binding Icon}" 
                                       Width="16" 
                                       Height="16" 
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>

                                    <!-- 文件名 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               FontSize="16" 
                                               Margin="0,-2,0,0"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>

                                    <Border Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 修改日期 -->
                                    <TextBlock Grid.Column="2" 
                                           Text="{Binding ModifyTime}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                    <Border Grid.Column="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        BorderThickness="0,0,1,0" 
                                        Margin="12,0,0,0"/>

                                    <!-- 大小 -->
                                    <TextBlock Grid.Column="3" 
                                           Text="{Binding Size}" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="24,0,0,0"/>

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
        <StackPanel HorizontalAlignment="Right"
                    x:Name="InfoBarPanel" 
                    Margin="0,10,10,0"/>
    </Grid>
</Page>