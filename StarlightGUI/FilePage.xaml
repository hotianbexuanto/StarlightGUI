<Page
    x:Class="StarlightGUI.FilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:StarlightGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource WindowBackgroundBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Padding="0,0,0,5"
                Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="文件管理器" />

                <TextBlock
                    x:Name="FileCountText"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    Text="正在加载..." />

                <TextBox
                    x:Name="PathBox"
                    Grid.Column="2"
                    Height="32"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Stretch"
                    KeyDown="PathBox_KeyDown" />

                <CommandBar
                    Grid.Column="3"
                    HorizontalAlignment="Right"
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        x:Name="RefreshButton"
                        Click="RefreshButton_Click"
                        Label="刷新">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe72c;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        x:Name="NextDriveButton"
                        Click="NextDriveButton_Click"
                        Label="下个盘符">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xebe7;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <TextBox
                    x:Name="SearchBox"
                    Grid.Column="4"
                    Width="300"
                    Height="32"
                    HorizontalAlignment="Right"
                    PlaceholderText="搜索..."
                    TextChanged="SearchBox_TextChanged" />
            </Grid>

            <Border
                Grid.Row="1"
                BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="PreviousButton"
                        Grid.Column="0"
                        Height="32"
                        HorizontalAlignment="Stretch"
                        Click="ColumnHeader_Click"
                        CornerRadius="0"
                        Tag="Previous">
                        <AnimatedIcon>
                            <AnimatedIcon.Source>
                                <animatedvisuals:AnimatedBackVisualSource />
                            </AnimatedIcon.Source>
                        </AnimatedIcon>
                    </Button>
                    <Button
                        x:Name="NameHeaderButton"
                        Grid.Column="1"
                        Height="32"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                        BorderThickness="1,0,0,0"
                        Click="ColumnHeader_Click"
                        Content="文件"
                        CornerRadius="0"
                        Tag="Name" />
                    <Button
                        x:Name="ModifyTimeHeaderButton"
                        Grid.Column="2"
                        Height="32"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                        BorderThickness="1,0,0,0"
                        Click="ColumnHeader_Click"
                        Content="修改日期"
                        CornerRadius="0"
                        Tag="ModifyTime" />
                    <Button
                        x:Name="SizeHeaderButton"
                        Grid.Column="3"
                        Height="32"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                        BorderThickness="1,0,0,0"
                        Click="ColumnHeader_Click"
                        Content="大小"
                        CornerRadius="0"
                        Tag="Size" />
                </Grid>
            </Border>

            <Border
                Grid.Row="2"
                Background="{ThemeResource ControlFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                BorderThickness="1,0,1,1"
                CornerRadius="0,0,5,5">
                <Grid>
                    <ProgressRing
                        x:Name="LoadingRing"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsActive="False" />

                    <essential:RevealFocusPanel x:Name="FileListViewRevealFocusPanel">
                        <ListView
                            x:Name="FileListView"
                            Background="Transparent"
                            ContainerContentChanging="FileListView_ContainerContentChanging"
                            DoubleTapped="FileListView_DoubleTapped"
                            IsDoubleTapEnabled="True"
                            IsMultiSelectCheckBoxEnabled="True"
                            ItemContainerStyle="{StaticResource ListViewItemStyle}"
                            RightTapped="FileListView_RightTapped"
                            SelectionMode="Extended"
                            Tag="{x:Bind FileListViewRevealFocusPanel}">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="40">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>

                                        <!--  进程图标  -->
                                        <Image
                                            Grid.Column="0"
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            Source="{Binding Icon}" />

                                        <!--  文件名  -->
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="0,-2,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                            Text="{Binding Name}" />

                                        <Border
                                            Grid.Column="2"
                                            Margin="12,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0" />

                                        <!--  修改日期  -->
                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="24,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                            Text="{Binding ModifyTime}" />

                                        <Border
                                            Grid.Column="3"
                                            Margin="12,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0" />

                                        <!--  大小  -->
                                        <TextBlock
                                            Grid.Column="3"
                                            Margin="24,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                            Text="{Binding Size}" />

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </essential:RevealFocusPanel>
                </Grid>
            </Border>
        </Grid>
        <StackPanel
            x:Name="InfoBarPanel"
            Margin="0,10,10,0"
            HorizontalAlignment="Right" />
    </Grid>
</Page>