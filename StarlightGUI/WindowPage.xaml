<Page
    x:Class="StarlightGUI.WindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarlightGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid Padding="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 固定标题栏区域 -->
            <Grid Grid.Row="0" Padding="0,0,0,5" Background="{StaticResource WindowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                       Text="窗口管理器" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                       x:Name="WindowCountText" 
                       Text="正在加载..." 
                       Margin="10,0,0,0" 
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                <CheckBox Grid.Column="3" 
                          x:Name="ShowVisibleOnlyCheckBox"
                          Content="只显示可见窗口"
                          Click="ShowVisibleOnlyCheckBox_Checked"/>

                <CommandBar Grid.Column="4" 
                       DefaultLabelPosition="Right"
                       HorizontalAlignment="Right">
                    <AppBarButton Label="刷新" 
                                  x:Name="RefreshButton" 
                                  Click="RefreshButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xe72c;" FontFamily="Segoe Fluent Icons"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <TextBox Grid.Column="5"
                         x:Name="SearchBox" 
                         HorizontalAlignment="Right" 
                         Width="300" 
                         Height="32"
                         PlaceholderText="搜索窗口标题..."
                         TextChanged="SearchBox_TextChanged"/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="5,5,0,0" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="NameHeaderButton" Grid.Column="0" Height="32" CornerRadius="0" Content="窗口" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Name"/>
                    <Button x:Name="HwndHeaderButton" Grid.Column="1" Height="32" CornerRadius="0" Content="HWND" HorizontalAlignment="Stretch" Click="ColumnHeader_Click" Tag="Hwnd" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                          CornerRadius="0,0,5,5"
                          BorderThickness="1,0,1,1"
                          Background="{ThemeResource ControlFillColorDefaultBrush}" 
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <Grid>
                    <ProgressRing x:Name="LoadingRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <ListView x:Name="WindowListView"
                          Background="Transparent"
                          RightTapped="WindowListView_RightTapped">

                        <!-- 窗口数据 -->
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" 
                                           Source="{Binding Icon}" 
                                           Width="16" 
                                           Height="16" 
                                           Margin="0,0,16,0"
                                           VerticalAlignment="Center"/>

                                    <!-- 窗口名 -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="12" 
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                            BorderThickness="0,0,1,0" 
                                            Margin="12,0,0,0"/>

                                    <!-- HWND -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Hwnd}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="24,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
        <StackPanel HorizontalAlignment="Right"
                    x:Name="InfoBarPanel" 
                    Margin="0,10,10,0"/>
    </Grid>
</Page>