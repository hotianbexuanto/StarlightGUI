<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="StarlightGUI.RunProcessDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:StarlightGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="运行新进程"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    PrimaryButtonText="运行"
    RequestedTheme="Dark"
    SecondaryButtonText="取消"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.TitleTemplate>
        <DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    Margin="0,5,0,0"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="30"
                    Glyph="&#xefda;" />
                <TextBlock VerticalAlignment="Center" Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <Grid>
        <StackPanel Margin="0,0,0,10">
            <TextBlock Margin="0,0,0,20" Text="Starlight GUI 将根据你所键入的名称，打开相应的程序。" />
            <TextBox
                x:Name="ProcessPathTextBox"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                PlaceholderText="进程名..." />

            <ComboBox
                x:Name="PermissionComboBox"
                essential:ComboBoxHelper.AcrylicWorkaround="True"
                ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                SelectedIndex="0"
                Text="进程权限">
                <ComboBoxItem x:Name="UserComboBoxItem" Content="User" />
                <ComboBoxItem Content="Administator" />
                <ComboBoxItem x:Name="TIComboBoxItem" Content="TrustedInstaller" />
            </ComboBox>

            <CheckBox
                x:Name="FullPrivilegesCheckBox"
                Content="启用完整特权 (TrustedInstaller)"
                IsChecked="False" />
        </StackPanel>
    </Grid>
</ContentDialog>