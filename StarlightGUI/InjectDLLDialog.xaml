<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="StarlightGUI.InjectDLLDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:StarlightGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="注入DLL"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    PrimaryButtonText="注入"
    RequestedTheme="Dark"
    SecondaryButtonText="取消"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.TitleTemplate>
        <DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    Margin="0,5,0,0"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="30"
                    Glyph="&#xebe8;" />
                <TextBlock VerticalAlignment="Center" Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  输入框  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Margin="0,0,0,20" Text="Starlight GUI 将根据选定 DLL 文件路径，注入文件至指定进程。" />
            <TextBox
                x:Name="DLLPathTextBox"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                PlaceholderText="文件路径..." />
            <Button Click="ExploreButton_Click" Content="浏览..." />
            <TextBlock
                x:Name="ErrorText"
                Foreground="Red"
                Text="" />
        </StackPanel>
    </Grid>
</ContentDialog>